# good resource
curl --remote-name https://raw.githubusercontent.com/thoughtbot/laptop/master/mac

# Pre steps
swap console to bash, install Homebrew
git clone this project
ln -s $HOME/Documents/personal/dotfiles/macos/bashrc ~/.bashrc
ln -s $HOME/Documents/personal/dotfiles/macos/bash_profile ~/.bash_profile
ln -s $HOME/Documents/personal/dotfiles/general/inputrc ~/.inputrc

install xcode
    enable tools in terminal env: sudo xcode-select -s /Applications/Xcode.app/Contents/Developer
install homebrew + update
brew install --cask google-chrome
brew install --cask iterm2
brew install git
brew install --cask 1password
brew install reattach-to-user-namespace
brew install bash-completion
brew install tmux
  link tmux.conf.macos to ~/.tmux.conf

##### vim/nvim setup
 brew install neovim
 brew install ctags
 brew install the_silver_searcher
 brew install ack
 brew install pt
 brew install ripgrep

install /junegunn/vim-plug/master/plug.vim
ln -s $HOME/Documents/personal/dotfiles/macos/vimrc  $HOME/.vimrc
ln -s $HOME/Documents/personal/dotfiles/macos/init.vim  $HOME/.config/nvim/init.vim
install Plugins in nvim
#####

install asdf-vm via Git
add .tool-versions to home directory with system reference. e.g. 'nodejs system'

brew install direnv
brew install openssl
brew install --cask fork
brew install awscli
    aws configure sso
brew install postgresql
    createdb `whoami`
brew install --cask pgadmin4
brew install --cask adobe-acrobat-reader
brew install nmap
brew install bash-git-prompt
brew install --cask docker
brew install yarn

brew tap "puma/puma"
brew install "puma/puma/puma-dev"

# "Setting up puma-dev"
sudo puma-dev -setup
puma-dev -install
# may need
# security add-trusted-cert -k login.keychain-db ~/Library/Application\ Support/io.puma.dev/cert.pem
cd ~/.puma-dev
echo port_number > project_name


# Jenkins
brew install --cask homebrew/cask-versions/adoptopenjdk8
brew install jenkins-lts

# LocalStack for mocking AWS services
pip install localstack
pip install awscli-local

# GraphiQL App
brew install --cask graphiql

# Optional
brew tap heroku/brew && brew install heroku
brew install youtube-dl
brew install --cask vlc
brew install --cask slack
brew install --cask wechat
brew install --cask postman
brew install memcached
    brew services start memcached
brew install redis
    brew services start redis
brew install m-cli
brew install python3
brew install kubectl
brew install --cask virtualbox
brew install --cask drawio


